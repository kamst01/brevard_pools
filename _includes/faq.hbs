<div class="bg-white" id="faq">
  <div class="px-4 py-16 mx-auto divide-y-2 divide-gray-200 max-w-7xl sm:py-24 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-extrabold text-gray-900">
      Frequently asked questions
    </h2>
    <div class="pt-10 mt-6">
      <dl class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:grid-rows-2 md:gap-x-8 md:gap-y-12">
        {{#with faq}}
          {{#each faqs}}
            <div>
              <dt class="text-lg font-medium leading-6 text-gray-900">
                {{ question }}
              </dt>
              <dd class="mt-2 text-base text-gray-500">
                {{ answer }}
              </dd>
            </div>
          {{/each}}
        {{/with}}
      </dl>
    </div>
  </div>
</div>