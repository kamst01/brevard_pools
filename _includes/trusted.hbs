<section class="pt-12 bg-blue-100 sm:pt-16" aria-labelledby="trustedHeading">
  <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto text-center">
      <h2 id="trustedHeading" class="text-3xl font-extrabold text-gray-900 sm:text-4xl no-sr-only" aria-hidden="true">
        {{trusted.heading}}
      </h2>
      <p class="mt-3 text-xl text-gray-600 sm:mt-4">
        {{trusted.subheading}}
      </p>
    </div>
  </div>
  <div class="pb-12 mt-10 bg-white sm:pb-16">
    <div class="relative">
      <div class="absolute inset-0 bg-blue-100 h-1/2"></div>
      <div class="relative px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
          <dl class="bg-white rounded-lg shadow-lg sm:grid sm:grid-cols-3">
            {{#each trusted.stats}}
            <div class="flex flex-col p-6 text-center bg-blue-200 border-b border-blue-100 md:rounded-l-lg sm:border-0 sm:border-r">
              <dt class="order-2 mt-2 text-lg font-medium leading-6 text-gray-500">
                {{title}}
              </dt>
              <dd class="order-1 text-5xl font-extrabold text-blue-500 opacity-90">
                {{stat}}
              </dd>
            </div>
            {{/each}}
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>