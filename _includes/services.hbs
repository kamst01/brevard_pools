<div class="py-12 bg-white" id="services">
  <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="lg:text-center">
      <h2 class="text-base font-semibold tracking-wide text-blue-600 uppercase">{{ services }}</h2>
      <p class="mt-2 text-3xl font-extrabold leading-8 tracking-tight text-gray-900 sm:text-4xl">
        {{ services-title }}
      </p>
      <p class="max-w-2xl mt-4 text-xl text-gray-500 lg:mx-auto">
        {{ services-subheading }}
      </p>
    </div>

    <div class="mt-10">
      <dl class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10">
        <div class="relative">
          <dt>
            <div class="absolute flex items-center justify-center w-12 h-12 text-white bg-blue-500 rounded-md">
              {{!-- water droplet svg --}}
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"></path>
              </svg>
            </div>
            <p class="ml-16 text-lg font-medium leading-6 text-gray-900">{{ first-service-title }}</p>
          </dt>
          <dd class="mt-2 ml-16 text-base text-gray-500">{{ first-service-description }}</dd>
        </div>

        <div class="relative">
          <dt>
            <div class="absolute flex items-center justify-center w-12 h-12 text-white bg-blue-500 rounded-md">
              {{!-- smiley face svg --}}
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M8 14s1.5 2 4 2 4-2 4-2"></path>
                <line x1="9" y1="9" x2="9.01" y2="9"></line>
                <line x1="15" y1="9" x2="15.01" y2="9"></line>
              </svg>
            </div>
            <p class="ml-16 text-lg font-medium leading-6 text-gray-900">{{ second-service-title }}</p>
          </dt>
          <dd class="mt-2 ml-16 text-base text-gray-500">
            {{ second-service-description }}
          </dd>
        </div>

        <div class="relative">
          <dt>
            <div class="absolute flex items-center justify-center w-12 h-12 text-white bg-blue-500 rounded-md">
              {{!-- calendar svg --}}
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
            </div>
            <p class="ml-16 text-lg font-medium leading-6 text-gray-900">{{ third-service-title }}</p>
          </dt>
          <dd class="mt-2 ml-16 text-base text-gray-500">
              {{ third-service-description }}
          </dd>
        </div>

        <div class="relative">
          <dt>
            <div class="absolute flex items-center justify-center w-12 h-12 text-white bg-blue-500 rounded-md">
              {{!-- thumbs up svg --}}
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path>
              </svg>
            </div>
            <p class="ml-16 text-lg font-medium leading-6 text-gray-900">{{ fourth-service-title }}</p>
          </dt>
          <dd class="mt-2 ml-16 text-base text-gray-500">
            {{ fourth-service-description }}
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>
