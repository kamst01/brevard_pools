<div class="py-16 overflow-hidden bg-white lg:py-24">
    <div class="relative max-w-xl px-4 mx-auto sm:px-6 lg:px-8 lg:max-w-7xl">
        <div class="relative">
        <h2 class="text-3xl font-extrabold leading-8 tracking-tight text-center text-gray-900 sm:text-4xl">
            {{ step.steps-heading }}
        </h2>
        <p class="max-w-3xl mx-auto mt-4 text-xl text-center text-gray-500">
            {{ step.steps-subheading }}
        </p>
        </div>

        <div class="relative mt-12 lg:mt-24 lg:grid lg:grid-cols-2 lg:gap-8 lg:items-center">
        <div class="relative">
            <h3 class="text-2xl font-extrabold tracking-tight text-gray-900 sm:text-3xl">
            {{ step.steps-first-microheading }}
            </h3>
            <p class="mt-3 text-lg text-gray-500">
            {{ step.steps-first-microdescription }}
            </p>

            <dl class="mt-10 space-y-10">
                {{#with step.steps}}
                    {{#each steps-first-section}}
                        {{#if step-toggle}}
                            <div class="relative">
                                <dt>
                                    <div class="absolute flex items-center justify-center w-12 h-12 font-bold rounded-md {{#if step-icon-color}}bg-{{ step-icon-color }}-50 text-{{ step-icon-color }}-600{{/if}}">
                                        {{ step-number }}
                                    </div>
                                    <p class="ml-16 text-lg font-medium leading-6 text-gray-900">
                                        {{ step-title }}
                                    </p>
                                </dt>
                                <dd class="mt-2 ml-16 text-base text-gray-500">
                                    {{ step-description }}
                                </dd>
                            </div>
                        {{/if}}
                    {{/each}}
                {{/with}}
            </dl>
        </div>

        <div class="relative mt-10 -mx-4 lg:mt-0" aria-hidden="true">
            <svg class="absolute transform -translate-x-1/2 translate-y-16 left-1/2 lg:hidden" width="784" height="404" fill="none" viewBox="0 0 784 404">
            <defs>
                <pattern id="ca9667ae-9f92-4be7-abcb-9e3d727f2941" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                <rect x="0" y="0" width="4" height="4" class="text-blue-200" fill="currentColor" />
                </pattern>
            </defs>
            <rect width="784" height="404" fill="url(#ca9667ae-9f92-4be7-abcb-9e3d727f2941)" />
            </svg>
            <img class="relative mx-auto rounded" width="490" src="https://res.cloudinary.com/bpc-cloud/v1616251548/images/pool-chlorine_ojrfrq.jpg" loading="lazy" alt="">
        </div>
        </div>

        <svg class="absolute hidden transform translate-y-12 translate-x-3/4 lg:block right-full" width="404" height="484" fill="none" viewBox="0 0 404 484" aria-hidden="true">
        <defs>
            <pattern id="64e643ad-2176-4f86-b3d7-f2c5da3b6a6d" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
            <rect x="0" y="0" width="4" height="4" class="text-blue-200" fill="currentColor" />
            </pattern>
        </defs>
        <rect width="404" height="784" fill="url(#64e643ad-2176-4f86-b3d7-f2c5da3b6a6d)" />
        </svg>

        <div class="relative mt-12 sm:mt-16 lg:mt-24">
            <div class="lg:grid lg:grid-flow-row-dense lg:grid-cols-2 lg:gap-8 lg:items-center">
                <div class="lg:col-start-2">
                    <h3 class="text-2xl font-extrabold tracking-tight text-gray-900 sm:text-3xl">
                        {{ step.steps-second-microheading}}
                    </h3>
                    <p class="mt-3 text-lg text-gray-500">
                        {{ step.steps-second-microdescription }}
                    </p>

                    <dl class="mt-10 space-y-10">
                        {{#with step.steps}}
                            {{#each steps-second-section}}
                                {{#if step-toggle}}
                                    <div class="relative">
                                        <dt>
                                            <div class="absolute flex items-center justify-center w-12 h-12 font-bold rounded-md {{#if step-icon-color}}bg-{{ step-icon-color }}-50 text-{{ step-icon-color }}-600{{/if}}">
                                                {{ step-number }}
                                            </div>
                                            <p class="ml-16 text-lg font-medium leading-6 text-gray-900">
                                                {{ step-title }}
                                            </p>
                                        </dt>
                                        <dd class="mt-2 ml-16 text-base text-gray-500">
                                            {{ step-description }}
                                        </dd>
                                    </div>
                                {{/if}}
                            {{/each}}
                        {{/with}}
                    </dl>
                    <p class="mt-3 text-sm text-gray-600">Disclaimer: *additional cost in some instances.</p>
                </div>

                <div class="relative mt-10 -mx-4 lg:mt-0 lg:col-start-1">
                    <svg class="absolute transform -translate-x-1/2 translate-y-16 rounded-full left-1/2 lg:hidden" width="784" height="404" fill="none" viewBox="0 0 784 404" aria-hidden="true">
                        <defs>
                            <pattern id="e80155a9-dfde-425a-b5ea-1f6fadd20131" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                                <rect x="0" y="0" width="4" height="4" class="text-blue-200" fill="currentColor" />
                            </pattern>
                        </defs>
                        <rect width="784" height="404" fill="url(#e80155a9-dfde-425a-b5ea-1f6fadd20131)" />
                    </svg>
                    <img class="relative mx-auto rounded" width="490" src="https://res.cloudinary.com/bpc-cloud/v1616251548/images/pool-chlorine_ojrfrq.jpg" loading="lazy" alt="">
                </div>
            </div>
        </div>
    </div>
</div>